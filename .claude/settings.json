{
  "project": {
    "name": "PNP Markets",
    "description": "Decentralized prediction market platform on Solana",
    "version": "0.1.0"
  },
  "preferences": {
    "language": "typescript",
    "framework": "nextjs",
    "packageManager": "pnpm",
    "testRunner": "vitest",
    "linter": "eslint"
  },
  "paths": {
    "source": "app",
    "components": "components",
    "lib": "lib",
    "hooks": "hooks",
    "types": "types",
    "api": "app/api"
  },
  "conventions": {
    "componentStyle": "functional",
    "stateManagement": "react-query",
    "styling": "tailwind-css-v4",
    "imports": "absolute",
    "fileNaming": "kebab-case",
    "componentNaming": "PascalCase"
  }
}
